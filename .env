# Database Configuration
DATABASE_URL=postgresql://postgres:admin@localhost:5432/complaint_system
TEST_DATABASE_URL=postgresql://postgres:admin@localhost:5432/complaint_system_test

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Optional - for notifications)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
# Max file size in bytes (10MB)
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx,txt

# Application Settings
API_V1_STR=/api/v1
PROJECT_NAME=University Complaint System
VERSION=1.0.0
DESCRIPTION=A comprehensive complaint management system for universities

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Storage (local or AWS S3)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=complaint-system-files
AWS_REGION=us-east-1
